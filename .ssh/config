# Apartment
Host jumphost-tunnel
  HostName      jump.terrible.systems
  User          root
  Port          443
  IdentityFile  ~/.ssh/id_ecdsa
  RemoteForward  5003 localhost:22
  ServerAliveInterval 30
  ServerAliveCountMax 3

Host sputnik.local
  User danielle
  IdentitiesOnly yes

Host sputnik.remote
  User danielle
  HostName localhost
  Port 5000
  ProxyJump jump.terrible.systems
  IdentitiesOnly yes

Host keystone.local
  User danielle
  IdentitiesOnly yes

Host keystone.remote
  User danielle
  HostName localhost
  Port 5001
  ProxyJump jump.terrible.systems
  IdentitiesOnly yes

